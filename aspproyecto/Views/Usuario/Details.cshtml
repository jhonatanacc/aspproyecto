@model aspproyecto.Models.usuario

@{
    ViewBag.Title = "Details";
    var nombreusuario = Model.nombre;
}

<h2>>Detalles del usuario: @Html.DisplayNameFor(model => model.nombre)</h2>

<div>
    <h
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            Apellido Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.apellido)
        </dd>

        <dt>
            Fecha Nacimiento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_nacimiento)
        </dd>

        <dt>
            Email Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

 
    </dl>
</div>
<p>
    @Html.ActionLink("Editar el usuario" + @nombreusuario, "Edit", new { id = Model.id }) |
